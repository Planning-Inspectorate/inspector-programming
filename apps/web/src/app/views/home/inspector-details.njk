<div class="pins-container-wide govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <h2 class="govuk-heading-m">{{ inspectors.selected.firstName + " " + inspectors.selected.lastName }}</h2>
        <h2 class="govuk-heading-m">Inspector details</h2>
        {{ govukSummaryList({
            rows: [
                { key: { text: "Postcode" }, value: { text: inspectors.selected.postcode } },
                { key: { text: "Grade" }, value: { text: inspectors.selected.grade } },
                { key: { text: "Email address" }, value: { text: inspectors.selected.email  } }
            ]
        }) }}

        <section>
            <h3 class="govuk-heading-m">Special Circumstances</h3>
            {% if inspectors.selected.specialCircumstances.length === 0 %}
                <p class="govuk-body">None recorded</p>
            {% else %}
                {% set specialCircumstancesRows = [] %}
                {% for item in inspectors.selected.specialCircumstances %}
                    {% set specialCircumstancesRows = specialCircumstancesRows.concat([{
                        key: { text: item.name }
                    }]) %}
                {% endfor %}

                {{ govukSummaryList({
                    rows: specialCircumstancesRows
                }) }}
            {% endif %}
        </section>
    </div>
    <div class="govuk-grid-column-one-half govuk-grid-column-one-half govuk-!-margin-top-8">
        <section>
                {% set tableRows = [] %}

                {% for row in inspectors.selected.specialisms %}
                    {% set tableRows = tableRows.concat([[
                        { text: row.name },
                        { text: row.proficiency },
                        { text: row.validFrom }
                    ]]) %}
                {% endfor %}

                {{ govukTable({
                    caption: "Specialisms",
                    captionClasses: "govuk-table__caption--m",
                    firstCellIsHeader: true,
                    head: [
                        { text: "Name", classes: "govuk-!-width-one-half" },
                        { text: "Proficiency", classes: "govuk-!-width-one-quarter" },
                        { text: "Valid from", classes: "govuk-!-width-one-quarter" }
                    ],
                    rows: tableRows,
                    classes: 'custom-table-header'
                }) }}
        </section>

    </div>
</div>