{
  "name": "inspector-programming",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commitlint": "commitlint --from=$(git cherry origin/main | head -n 1 | cut -c 3-)",
    "db-migrate-dev": "npm run migrate-dev --workspace @pins/inspector-programming-database",
    "db-reset-dev": "npm run reset-dev --workspace @pins/inspector-programming-database",
    "db-migrate-prod": "npm run migrate-prod --workspace @pins/inspector-programming-database",
    "db-generate": "npm run generate --workspace @pins/inspector-programming-database",
    "db-seed": "npm run seed --workspace @pins/inspector-programming-database",
    "db-seed-prod": "npm run seed:prod --workspace @pins/inspector-programming-database",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "npx eslint .",
    "prepare": "node .husky/install.mjs",
    "web": "npm run dev --workspace=inspector-programming-web",
    "test": "node --test",
    "test-coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@azure/functions": "^4.8.0",
    "@azure/identity": "^4.12.0",
    "@azure/msal-node": "^3.8.0",
    "@date-fns/tz": "^1.4.1",
    "@faker-js/faker": "^10.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@planning-inspectorate/data-model": "^1.18.1",
    "@prisma/adapter-mssql": "^6.17.0",
    "@prisma/client": "^6.17.0",
    "accessible-autocomplete": "^3.0.1",
    "body-parser": "^2.2.0",
    "connect-redis": "^9.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "govuk-frontend": "^5.12.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "notifications-node-client": "^8.2.1",
    "nunjucks": "^3.2.4",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "cookie-parser": "^1.4.7",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^6.17.0",
    "sass": "^1.92.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md,prisma,yml,yaml,scss}": [
      "prettier --write"
    ]
  }
}
